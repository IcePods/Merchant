<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/home_background"
    tools:context="com.example.shan.merchant.Activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="35dp">
        <LinearLayout
            android:id="@+id/merchant_home_information"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="@drawable/mainbutton"
            android:gravity="center">
            <Button
                android:id="@+id/merchant_home_information_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@mipmap/merchant"
                android:background="@null"
                android:drawablePadding="20dp"
                android:drawableTint="#EFEFEF"
                android:text="店铺管理"
                android:textColor="#EFEFEF"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/merchant_home_employees"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@drawable/mainbutton"
            android:gravity="center">
            <Button
                android:id="@+id/merchant_home_employees_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@mipmap/employee"
                android:background="@null"
                android:drawablePadding="20dp"
                android:drawableTint="#EFEFEF"
                android:text="店员管理"
                android:textColor="#EFEFEF"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:id="@+id/merchant_home_appointment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="@drawable/mainbutton"
            android:gravity="center">
            <Button
                android:id="@+id/merchant_home_appointment_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@mipmap/appoint"
                android:background="@null"
                android:drawablePadding="20dp"
                android:drawableTint="#EFEFEF"
                android:text="预约管理"
                android:textColor="#EFEFEF"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/merchant_home_activitys"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@drawable/mainbutton"
            android:gravity="center">
            <Button
                android:id="@+id/merchant_home_activitys_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@mipmap/activity"
                android:background="@null"
                android:drawablePadding="20dp"
                android:drawableTint="#EFEFEF"
                android:text="活动管理"
                android:textColor="#EFEFEF"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="35dp">
        <LinearLayout
            android:id="@+id/merchant_home_works"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="@drawable/mainbutton"
            android:gravity="center">
            <Button
                android:id="@+id/merchant_home_works_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@mipmap/works"
                android:background="@null"
                android:drawablePadding="20dp"
                android:drawableTint="#EFEFEF"
                android:text="发布作品"
                android:textColor="#EFEFEF"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/merchant_home_exit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@drawable/mainbutton"
            android:gravity="center">
            <Button
                android:id="@+id/merchant_home_exit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@mipmap/exit"
                android:background="@null"
                android:drawablePadding="20dp"
                android:drawableTint="#EFEFEF"
                android:text="注销登录"
                android:textColor="#EFEFEF"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
