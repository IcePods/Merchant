<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/home_background2"
    tools:context="com.example.shan.merchant.Activity.MainActivity">

    <Button
        android:id="@+id/merchant_home_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/home_information_circlebutton"
        android:text="店铺管理"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/merchant_home_employees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/merchant_home_information"
        android:layout_gravity="center"
        android:layout_marginRight="34dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/home_employees_circlebutton"
        android:text="店员管理"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/merchant_home_appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/merchant_home_works"
        android:layout_below="@+id/merchant_home_employees"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/home_convention_circlebutton"
        android:text="预约管理"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/merchant_home_activitys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/merchant_home_employees"
        android:layout_below="@+id/merchant_home_employees"
        android:layout_gravity="center"
        android:layout_marginTop="41dp"
        android:background="@drawable/home_activitys_circlebutton"
        android:text="活动管理"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/merchant_home_works"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/merchant_home_information"
        android:layout_below="@+id/merchant_home_appointment"
        android:layout_gravity="center"
        android:layout_marginTop="43dp"
        android:background="@drawable/home_works_circlebutton"
        android:text="发布作品"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/merchant_home_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/merchant_home_employees"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:background="@drawable/home_exit_circlebutton"
        android:text="注销登录"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</RelativeLayout>
