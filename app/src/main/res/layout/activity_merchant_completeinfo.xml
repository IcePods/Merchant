<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.shan.merchant.Activity.MerchantCompleteinfoActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/headerlistborder">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="完善你的店铺信息"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:id="@+id/tv_completeinfo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:textSize="17sp"
            android:textColor="#101010"
            android:text="店铺名"/>
        <EditText
            android:id="@+id/merchant_info_shopname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:maxLength="10"
            android:textSize="17sp"
            android:textColor="#808080"
            android:layout_toRightOf="@id/tv_completeinfo_name" />
        <TextView
            android:id="@+id/tv_completeinfo_boss"
            android:layout_below="@id/tv_completeinfo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:textSize="17sp"
            android:textColor="#101010"
            android:text="店长名"/>
        <EditText
            android:id="@+id/merchant_info_shopmanagername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:maxLength="8"
            android:textSize="17sp"
            android:textColor="#808080"
            android:layout_below="@id/tv_completeinfo_name"
            android:layout_toRightOf="@id/tv_completeinfo_boss" />
        <TextView
            android:id="@+id/tv_completeinfo_phone"
            android:layout_below="@id/tv_completeinfo_boss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:textSize="17sp"
            android:textColor="#101010"
            android:text="手机号"/>
        <EditText
            android:id="@+id/merchant_info_shoptelephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:maxLength="11"
            android:inputType="number"
            android:textSize="17sp"
            android:textColor="#808080"
            android:layout_below="@id/tv_completeinfo_boss"
            android:layout_toRightOf="@id/tv_completeinfo_phone" />
        <TextView
            android:id="@+id/tv_completeinfo_address"
            android:layout_below="@id/tv_completeinfo_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:textSize="17sp"
            android:textColor="#101010"
            android:text="店铺地址"/>
        <TextView
            android:id="@+id/but_completeinfo_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:layout_below="@id/tv_completeinfo_phone"
            android:layout_alignParentRight="true"
            android:textSize="17sp"
            android:text="请选择 >" />
        <TextView
            android:id="@+id/tv_completeinfo_picture"
            android:layout_below="@id/tv_completeinfo_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:textSize="17sp"
            android:textColor="#101010"
            android:text="上传店铺图片(最多5张)"/>
        <LinearLayout
            android:id="@+id/linlayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:background="#f0efef"
            android:layout_below="@id/tv_completeinfo_picture">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/addphoto"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/addphoto"/>
                <ImageView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/addphoto"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp">
                <ImageView
                    android:id="@+id/merchant_info_shopimages"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/addpicture"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/merchant_completeinfo_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#177cb0"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_below="@id/linlayout"
            android:textColor="#fff"
            android:textSize="17sp"
            android:text="申请开店"/>



    </RelativeLayout>



</LinearLayout>
