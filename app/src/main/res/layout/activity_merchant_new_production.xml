<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shan.merchant.Activity.MerchantNewProductionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/headerlistborder">

            <ImageButton
                android:id="@+id/merchant_new_production_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@null"
                android:src="@mipmap/ic_right_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:text="上传新作品"
                android:textColor="#000000"
                android:textSize="17sp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <TextView
                android:id="@+id/tv_new_production_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:textSize="17sp"
                android:textColor="#101010"
                android:text="作品名"/>
            <EditText
                android:id="@+id/new_production_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textCursorDrawable="@drawable/color_cursor"
                android:layout_marginTop="20dp"
                android:maxLength="10"
                android:textSize="17sp"
                android:textColor="#808080"
                android:layout_marginLeft="20dp"
                android:hint="请输入作品名"
                android:layout_toRightOf="@id/tv_new_production_title"/>
            <TextView
                android:id="@+id/tv_new_production_head"
                android:layout_below="@id/tv_new_production_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:textSize="17sp"
                android:textColor="#101010"
                android:text="选择作品头像"/>
            <TextView
                android:id="@+id/new_production_head"
                android:layout_below="@id/tv_new_production_title"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:textSize="17sp"
                android:text="请选择>"/>
            <TextView
                android:id="@+id/tv_new_production_description"
                android:layout_below="@id/tv_new_production_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:textSize="17sp"
                android:textColor="#101010"
                android:text="作品描述"/>
            <EditText
                android:id="@+id/new_production_description"
                android:layout_below="@id/tv_new_production_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:textCursorDrawable="@drawable/color_cursor"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:inputType="textMultiLine"
                android:gravity="left|top"
                android:minLines="4"
                android:textSize="17sp"
                android:textColor="#808080"
                android:hint="请输入作品描述"/>
            <TextView
                android:id="@+id/tv_new_production_price"
                android:layout_below="@id/new_production_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:textSize="17sp"
                android:textColor="#101010"
                android:text="价格"/>
            <EditText
                android:id="@+id/new_production_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textCursorDrawable="@drawable/color_cursor"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:maxLength="4"
                android:inputType="number"
                android:textSize="17sp"
                android:textColor="#808080"
                android:hint="价格"
                android:layout_below="@id/new_production_description"
                android:layout_toRightOf="@id/tv_new_production_price" />
            <TextView
                android:id="@+id/tv_new_production_type"
                android:layout_below="@id/new_production_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:textSize="17sp"
                android:textColor="#101010"
                android:text="类型" />
            <Spinner
                android:id="@+id/new_production_type"
                android:layout_below="@id/tv_new_production_price"
                android:layout_toRightOf="@id/tv_new_production_type"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_new_production_picture"
                android:layout_below="@id/tv_new_production_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:textSize="17sp"
                android:textColor="#101010"
                android:text="上传店铺图片"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/new_production_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_below="@+id/tv_new_production_picture"
                android:overScrollMode="never" />


            <Button
                android:id="@+id/commit_new_production"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#177cb0"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_below="@id/new_production_images"
                android:textColor="#fff"
                android:textSize="17sp"
                android:text="上传"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
