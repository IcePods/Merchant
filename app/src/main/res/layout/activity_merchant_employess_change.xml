<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.shan.merchant.Activity.MerchantEmployessChangeActivity">
    <LinearLayout
        android:id="@+id/merchant_employess_change_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/headerlistborder">

        <ImageButton
            android:id="@+id/merchant_employesschange_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@null"
            android:src="@mipmap/ic_right_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:text="修改店员"
            android:textColor="#000000"
            android:textSize="17sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/merchant_employess_change_ll_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/merchant_employess_change_ll"
        android:background="@drawable/listborder"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="员工照片"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:textColor="#000000"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/merchant_employesschange_picture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="2dp"
            android:src="@mipmap/user_person_headimg"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:src="@mipmap/arrowtip_right"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/merchant_employess_change_ll_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/merchant_employess_change_ll_pic"
        android:background="@drawable/listborder"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="员工昵称"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/merchant_employesschange_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="理发师一"
            android:textColor="#7F7F7F"
            android:textSize="15sp"
            android:background="@null"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:src="@mipmap/arrowtip_right"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/merchant_employess_change_ll_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/merchant_employess_change_ll_name"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="员工介绍"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/merchant_employesschange_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:inputType="textMultiLine"
            android:minLines="4"
            android:background="@drawable/edittextstyle"
            android:text="理发师一理发师一理发师一"
            android:textColor="#7F7F7F"
            android:textSize="15sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/merchant_employesschange_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/blueroundbutton"
        android:textColor="#ffffff"
        android:text="提交"
        android:textSize="18sp"/>
</RelativeLayout>