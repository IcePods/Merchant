<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shan.merchant.Activity.MerchantInformationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/headerlistborder">

        <ImageButton
            android:id="@+id/merchant_information_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@null"
            android:src="@mipmap/ic_right_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:text="店铺管理"
            android:textColor="#000000"
            android:textSize="17sp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:id="@+id/tv_information_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:textSize="17sp"
            android:textColor="#101010"
            android:text="店铺名"/>
        <EditText
            android:id="@+id/merchant_information_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_marginTop="20dp"
            android:maxLength="10"
            android:textSize="17sp"
            android:textColor="#808080"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_information_name"/>
        <TextView
            android:id="@+id/tv_information_boss"
            android:layout_below="@id/tv_information_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:textSize="17sp"
            android:textColor="#101010"
            android:text="店长名"/>
        <EditText
            android:id="@+id/merchant_information_boss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:maxLength="8"
            android:textSize="17sp"
            android:textColor="#808080"
            android:layout_below="@id/tv_information_name"
            android:layout_toRightOf="@id/tv_information_boss" />
        <TextView
            android:id="@+id/tv_information_picture"
            android:layout_below="@id/tv_information_boss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:textSize="17sp"
            android:textColor="#101010"
            android:text="店铺头像" />
        <TextView
            android:id="@+id/merchant_information_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:layout_below="@id/tv_information_boss"
            android:layout_alignParentRight="true"
            android:textSize="17sp"
            android:text="请选择 >" />
        <TextView
            android:id="@+id/tv_information_address"
            android:layout_below="@id/tv_information_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:textSize="17sp"
            android:textColor="#101010"
            android:text="店铺地址"/>
        <TextView
            android:id="@+id/merchant_information_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:layout_below="@id/tv_information_picture"
            android:layout_alignParentRight="true"
            android:textSize="17sp"
            android:text="请选择 >" />
        <TextView
            android:id="@+id/tv_information_phone"
            android:layout_below="@id/tv_information_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:textSize="17sp"
            android:textColor="#101010"
            android:text="店铺电话"/>
        <EditText
            android:id="@+id/merchant_information_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:maxLength="11"
            android:inputType="number"
            android:textSize="17sp"
            android:textColor="#808080"
            android:layout_below="@id/tv_information_address"
            android:layout_toRightOf="@id/tv_information_phone" />
        <TextView
            android:id="@+id/tv_information_addpicture"
            android:layout_below="@id/tv_information_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:textSize="17sp"
            android:textColor="#101010"
            android:text="上传店铺图片(最多5张)"/>
        <LinearLayout
            android:id="@+id/linlayout_information"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:background="#f0efef"
            android:layout_below="@id/tv_information_addpicture">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/addphoto"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/addphoto"/>
                <ImageView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/addphoto"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp">
                <ImageView
                    android:id="@+id/merchant_information_shopimages"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/addpicture"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/merchant_information_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#177cb0"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_below="@id/linlayout_information"
            android:textColor="#fff"
            android:textSize="17sp"
            android:text="保存"/>




    </RelativeLayout>

    </LinearLayout>
</ScrollView>
