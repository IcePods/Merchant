<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shan.merchant.Activity.MerchantInformationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/headerlistborder">

        <ImageButton
            android:id="@+id/merchant_information_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@null"
            android:src="@mipmap/ic_right_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:text="店铺管理"
            android:textColor="#000000"
            android:textSize="17sp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <LinearLayout
            android:id="@+id/shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:textSize="17sp"
                android:textColor="#101010"
                android:text="店铺名"/>
            <EditText
                android:id="@+id/merchant_information_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textCursorDrawable="@drawable/color_cursor"
                android:layout_marginTop="20dp"
                android:hint="名称                "
                android:gravity="right"
                android:textSize="17sp"
                android:textColor="#808080"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_name">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:textSize="17sp"
                android:textColor="#101010"
                android:text="店铺头像" />

            <TextView
                android:id="@+id/merchant_information_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:text="请选择 >"
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:textSize="17sp"
                android:textColor="#101010"
                android:text="店铺地址"/>

            <EditText
                android:id="@+id/merchant_information_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textCursorDrawable="@drawable/color_cursor"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:hint="地址                "
                android:gravity="right"
                android:maxLength="11"
                android:inputType="number"
                android:textSize="17sp"
                android:textColor="#808080" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:textSize="17sp"
                android:textColor="#101010"
                android:text="店铺电话"/>
            <EditText
                android:id="@+id/merchant_information_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textCursorDrawable="@drawable/color_cursor"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:hint="号码                "
                android:gravity="right"
                android:maxLength="11"
                android:inputType="number"
                android:textSize="17sp"
                android:textColor="#808080" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shop_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="活动内容"
                android:layout_margin="5dp"
                android:textSize="15sp"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/shop_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:inputType="textMultiLine"
                android:minLines="4"
                android:background="@drawable/edittextstyle"
                android:hint="请输入活动内容"
                android:textColor="#7F7F7F"
                android:textSize="13sp"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_desc">
            <TextView
                android:id="@+id/tv_information_addpicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:textSize="17sp"
                android:textColor="#101010"
                android:text="上传店铺图片(最多5张)"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/merchant_information_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:overScrollMode="never"
                android:layout_below="@id/tv_information_addpicture"/>
        </RelativeLayout>

        <Button
            android:id="@+id/merchant_information_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#177cb0"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_below="@id/picture"
            android:textColor="#fff"
            android:textSize="17sp"
            android:text="保存"/>




    </RelativeLayout>

    </LinearLayout>
</ScrollView>
